{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@beginalive/components/button": ["libs/components/button/src/index.ts"],
      "@beginalive/components/editor": ["libs/components/editor/src/index.ts"],
      "@beginalive/components/layouts": [
        "libs/components/layouts/src/index.ts"
      ],
      "@beginalive/components/pages": ["libs/components/pages/src/index.ts"],
      "@beginalive/components/ui": ["libs/components/ui/src/index.ts"],
      "@beginalive/fetch": ["libs/fetch/src/index.ts"],
      "@beginalive/tools": ["libs/tools/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
